# Backend Environment Variables (.env)
# Copy these to your Vercel Backend project environment variables

# Database Configuration
DATABASE_URL=postgres://username:password@your-database-host.com:port/database?sslmode=require

# Clerk Authentication (Server-side)
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

# Node Environment
NODE_ENV=production

# CORS - Update with your frontend Vercel URL
FRONTEND_URL=https://your-frontend.vercel.app
